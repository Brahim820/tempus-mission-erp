<data>
    <record id="view_professor_diploma_form" model="ir.ui.view">
            <field name="name">grh.professor.diploma.form</field>
            <field name="model">grh.professor.diploma</field>
            <field name="arch" type="xml">
                <form string="Professor diploma" version="7.0">
					<sheet>
						<label for="diploma" class="oe_edit_only"/>
						<h2>
							<field name="diploma"/>
						</h2>
						<group>
							<group >
								<field name="professor_id"/>
								<field name="graduation_date"/>
							</group>
							<group >	
								<field name="establishment"  />
								<field name="city"/>
							</group>
							<group >
								<field name="support"/>
							</group >
						</group>
					</sheet>
				</form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_professor_diploma_tree">
