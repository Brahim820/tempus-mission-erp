        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Professor diploma" >
				<field name="diploma"/>
				<field name="graduation_date"/>
				<field name="establishment"  />
				<field name="city"  />
				<field name="support"  />
			</tree>
        </field>
    </record>
	<record model="ir.actions.act_window" id="act_professor_diploma_view">
        <field name="name">Studies</field>
        <field name="res_model">grh.professor.diploma</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
		<field name="help" type="html"><p class="oe_view_nocontent_create">Click to define a new record.</p></field>
    </record>
	
